<Window x:Class="PerfumeriaRaul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerfumeriaRaul"
        mc:Ignorable="d"
        Title="MainWindow" Height="593" Width="800">


    <StackPanel Background="white">
        <StackPanel.Resources>
            <Style TargetType="Button" BasedOn="{StaticResource menu}"/>
        </StackPanel.Resources>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="602" Height="40" Margin="40,10,0,10">
            <Button Content="PRINCIPAL" Click="Button_ClickPrincipal" Width="133"/>

            <Button Content="NUEVO" Click="Button_ClickNuevo" Margin="0,8,0,7" Width="157"/>
            <Button Content="CONSULTA" Click="Button_ClickConsulta" Margin="0,8,0,7" Width="150"/>
            <Button Content="SALIR" Click="Button_ClickSalir" Margin="0,8,0,7" Width="169" />
        </StackPanel>

        <Frame x:Name="myFrame" Margin="20,10,20,10" NavigationUIVisibility="Hidden" Height="472"/>
    </StackPanel>
</Window>
